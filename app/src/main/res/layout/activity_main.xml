<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="24dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Значение" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Скорость" />
            <TextView
                android:id="@+id/speed"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Обороты" />
            <TextView
                android:id="@+id/rpm"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Нагрузка" />
            <TextView
                android:id="@+id/load"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Расход воздуха" />
            <TextView
                android:id="@+id/air"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Топливо" />
            <TextView
                android:id="@+id/fuel"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Напряжение" />
            <TextView
                android:id="@+id/voltage"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Тепмература масла" />
            <TextView
                android:id="@+id/oil_temp"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="Температура воздуха" />
            <TextView
                android:id="@+id/air_temp"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/shape_edittext"
                android:padding="3dip"
                android:text="0" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>